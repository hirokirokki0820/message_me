<div class="ui center aligned header">
  <h1>MessageMe へようこそ!</h1>
  <h4 class="ui medium icon header">
    <i class="circular orange power off icon"></i>
    ログイン
  </h4>
</div>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session, url: login_path) do |f| %>
        <div class="ui form">
          <div class="field">
            <%= f.label :username %>
            <div class="ui left icon input">
              <%= f.text_field :username,  placeholder: "ユーザー名" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
             <%= f.label :password %>
            <div class="ui left icon input">
              <%= f.password_field :password,  placeholder: "パスワード" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "ログイン", class: "ui orange submit button" %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui orange button">
        <i class="signup icon"></i>
        アカウント作成
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
